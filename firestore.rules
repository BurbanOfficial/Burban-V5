rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public read access to products
    match /products/{document=**} {
      allow read;
    }

    // Public read access to pages
    match /pages/{document=**} {
      allow read;
    }

    // Public read access to size guides
    match /sizeGuides/{document=**} {
      allow read;
    }

    // Public read access to banners
    match /banners/{document=**} {
      allow read;
    }

    // Public read access to categories
    match /categories/{document=**} {
      allow read;
    }

    // User data - read/write own data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Orders - read own orders
    match /orders/{orderId} {
      allow read: if request.auth.uid == resource.data.userId;
    }

    // Admin access to all collections
    match /{document=**} {
      allow read, write: if request.auth.token.role in ['admin', 'editor'];
    }
  }
}
